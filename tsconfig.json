{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "electron/**/*", "webpack/**/*"]
}
